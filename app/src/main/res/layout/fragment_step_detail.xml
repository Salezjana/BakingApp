<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.RecipeDetailFragment">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/vp_step_detail"
        android:layout_width="match_parent"
        android:background="@color/material_color_black"
        android:layout_height="300dp">

    </com.google.android.exoplayer2.ui.PlayerView>

    <ImageView
        android:id="@+id/iv_step_detail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_medium"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/big_tv_step_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <TextView
                android:id="@+id/medium_1_tv_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>